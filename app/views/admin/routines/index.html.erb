<div class="admin-routine-contents">
  <h5>■ルーティン一覧</h5>

    <div class="item-contents_all">
      <% @routines.each do |routine| %>
      <div class="item-contents">
        <!--会員ステータス-->
        <div class="status_tag_routine">
          <%if routine.public_status %>
          <span class="item-check"><i class="fa-solid fa-check"></i></span>
          <% else %>
          <span class="item-lock"><i class="fa-solid fa-lock"></i></span>
          <% end %>
        </div>
        <!--会員ニックネーム-->
        <p class="profile_name">by <%= routine.customer.nickname%></p>

        <!--ルーティン情報-->
        <div class="item-content">
          <ul>
            <li><b><span class="item-content-title">目標</span></b><br><p><%= routine.target %></p></li>
            <li><b><span class="item-content-title">ルーティン</span></b><br><p><i class="fa-solid fa-flag"></i>&nbsp;<%= routine.task.name %></p></li>
            <li class="sub_task_list"><p>
              <% routine.task.sub_tasks.each do | sub_task| %>
              <span class="subtask_line"><%= sub_task.name %></span>
              <% end %>
            </p></li>
            <li class="time-list">
              <p>
              <b><span class="item-content-title">時間</span></b>
              <% if routine.implementation_time.accurate_time.present? %>
              <%= routine.implementation_time.accurate_time.strftime('%H:%M') if routine.implementation_time.accurate_time %>
              <% else %>
              <%= routine.implementation_time.approximate_time %>
              <% end %>
              </p>
            </li>
            <li><p><b><span class="item-content-title">頻度</span></b>:<%= routine.frequency.frequency_i18n %></p></li>
            <li><p><b><span class="item-content-title">期間</span></b>:<%= routine.period.period_i18n %></p></li>
            <li class="time-list"><p><b><span class="item-content-title"></span></b><%= l routine.created_at %></p></li>
          </ul>
          <!--ルーティンのレベルアイコン-->
          <img src="/level_01.jpg">
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>