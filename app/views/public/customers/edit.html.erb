<div class="customer-edit-contents">

  <h5>会員情報編集</h5>

  <div>
    <div>
    <%= form_with model: @customer ,url: information_path(current_customer.id) do |f| %>
      <!--氏名-->
      <div>
        <div>
          <%= f.label :'ニックネーム' %>
        </div>
        <div>
          <%= f.text_field :nickname, autofocus: true, autocomplete: "last_name", placeholder: "ジョン・タイター", class: "form-control " %>
        </div>
      </div>
      <!--メールアドレス-->
      <div>
        <div>
          <%= f.label :メールアドレス %>
        </div>
        <div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="edit-btns">
        <div>
          <button type="submit" class="">
            変更内容を保存
          </button>
        <% end %>
        </div>
        <div>
          <%= link_to '退会する', unsubscribe_path %>
        </div>
      </div>

    </div>
  </div>
</div>